<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/imagem"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/evagas2" />

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/vagaTitulo"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Descrição da vaga"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/empresa"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Empresa:"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/empresaText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TW Tecnologia"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/vaga"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Vaga:"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/vagaText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Helpdesk"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/local"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Local:"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/salarioText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Avenida Paulista, 1354 - SP"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/descricao"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Descrição da vaga:"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="120dp">

        <TextView
            android:id="@+id/descricaoText"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:text="Irá atuar como suporte técnico da empresa atendendo aos chamados e funcionários, realizando a manutençao dos equipamentos da empresa."
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="100dp"
        android:layout_marginTop="0dp">

        <Button
            android:id="@+id/enviarCurriculo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enviarCurriculo"
            android:onClick="enviarEmail"
            android:textSize="22sp"
            android:textStyle="bold"
            android:background="@color/colorAzulClaro"/>


    </LinearLayout>

</LinearLayout>